{
    "title": "Making Sentences NEGATIVE",
    "main_concept": "Positive Sentence → Add Helper + NOT → Negative Sentence",
    "children": [
        {
            "name": "STEP 1: Identify the Helper",
            "description": "Find if there's already a helper in the sentence",
            "children": [
                {
                    "name": "Helper Already Present",
                    "examples": [
                        "He IS reading",
                        "They CAN swim",
                        "She WILL go",
                        "I HAVE finished"
                    ],
                    "action": "Go to Step 2 directly"
                },
                {
                    "name": "NO Helper (Simple Present/Past)",
                    "examples": [
                        "He reads books",
                        "They play games",
                        "She wrote a letter"
                    ],
                    "action": "Add the correct helper first",
                    "children": [
                        {
                            "name": "Present Simple",
                            "helper_to_add": "do / does",
                            "rule": "Use DOES for he/she/it, DO for I/you/we/they",
                            "examples": [
                                "He reads → He DOES read",
                                "They play → They DO play"
                            ]
                        },
                        {
                            "name": "Past Simple",
                            "helper_to_add": "did",
                            "rule": "Use DID for all subjects",
                            "examples": [
                                "He read → He DID read",
                                "They played → They DID play"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "STEP 2: Add NOT after Helper",
            "formula": "Subject + Helper + NOT + Verb",
            "examples": [
                "He does + NOT + read",
                "They can + NOT + swim",
                "She will + NOT + go"
            ],
            "contractions": {
                "do not": "don't",
                "does not": "doesn't",
                "did not": "didn't",
                "is not": "isn't",
                "are not": "aren't",
                "was not": "wasn't",
                "were not": "weren't",
                "will not": "won't",
                "can not": "can't",
                "have not": "haven't",
                "has not": "hasn't",
                "had not": "hadn't"
            }
        },
        {
            "name": "STEP 3: Fix the Main Verb",
            "description": "ONLY if you added do/does/did",
            "rule": "Change verb to BASE FORM (remove -s, -ed, -ing from main verb)",
            "examples": [
                {
                    "positive": "He reads",
                    "add_helper": "He does read",
                    "add_not": "He does not read",
                    "note": "reads → read (base form)"
                },
                {
                    "positive": "She played",
                    "add_helper": "She did play",
                    "add_not": "She did not play",
                    "note": "played → play (base form)"
                }
            ],
            "important": "If helper was already there (is, can, will, etc.), DON'T change the main verb!"
        },
        {
            "name": "ALL HELPERS LIST",
            "description": "Memorize these helpers",
            "categories": [
                {
                    "category": "do family",
                    "helpers": [
                        "do",
                        "does",
                        "did"
                    ],
                    "usage": "Simple present & past tenses"
                },
                {
                    "category": "be family",
                    "helpers": [
                        "is",
                        "am",
                        "are",
                        "was",
                        "were"
                    ],
                    "usage": "Continuous tenses & adjectives"
                },
                {
                    "category": "have family",
                    "helpers": [
                        "have",
                        "has",
                        "had"
                    ],
                    "usage": "Perfect tenses"
                },
                {
                    "category": "modals",
                    "helpers": [
                        "will",
                        "shall",
                        "can",
                        "could",
                        "may",
                        "might",
                        "must",
                        "should",
                        "would"
                    ],
                    "usage": "Possibility, ability, permission, obligation"
                }
            ]
        },
        {
            "name": "PRACTICE EXAMPLES",
            "by_tense": [
                {
                    "tense": "Present Simple",
                    "positive": "He reads books",
                    "negative": "He does not read books",
                    "steps": [
                        "1. No helper visible",
                        "2. Add 'does' (because 'he')",
                        "3. Add 'not' after 'does'",
                        "4. Change 'reads' → 'read' (base form)"
                    ]
                },
                {
                    "tense": "Past Simple",
                    "positive": "They made a hut",
                    "negative": "They did not make a hut",
                    "steps": [
                        "1. No helper visible",
                        "2. Add 'did'",
                        "3. Add 'not' after 'did'",
                        "4. Change 'made' → 'make' (base form)"
                    ]
                },
                {
                    "tense": "Present Continuous",
                    "positive": "She is reading",
                    "negative": "She is not reading",
                    "steps": [
                        "1. Helper 'is' already present",
                        "2. Add 'not' after 'is'",
                        "3. Keep 'reading' as is"
                    ]
                },
                {
                    "tense": "Future Simple",
                    "positive": "I will go",
                    "negative": "I will not go",
                    "steps": [
                        "1. Helper 'will' already present",
                        "2. Add 'not' after 'will'",
                        "3. Keep 'go' as is"
                    ]
                },
                {
                    "tense": "Modal",
                    "positive": "They can swim",
                    "negative": "They cannot swim",
                    "steps": [
                        "1. Helper 'can' already present",
                        "2. Add 'not' after 'can'",
                        "3. Keep 'swim' as is"
                    ]
                }
            ]
        },
        {
            "name": "QUICK MEMORY FORMULA",
            "formula": "Helper + NOT + Base Verb = Negative",
            "remember": [
                "✓ Always add NOT after the helper",
                "✓ If you added do/does/did, use base form of verb",
                "✓ If helper was already there, don't change the main verb",
                "✓ DOES = he/she/it | DO = I/you/we/they | DID = everyone (past)"
            ]
        }
    ]
}